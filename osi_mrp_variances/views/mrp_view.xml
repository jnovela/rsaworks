    <record id="mrp_production_workorder_ids_form_view" model="ir.ui.view">
        <field name="name">mrp.production.workorder.ids.form.view</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <field name="workorder_ids" position="replace"/>
            <xpath expr="//page[2]" position="after">
                <page string="Work Orders" name="work_orders">
                    <field name="workorder_ids">
                        <tree string="Work Orders" delete="0" create="0" decoration-success="date_planned_start&gt;=current_date and state == 'ready'" decoration-muted="state in ('done','cancel')" decoration-danger="date_planned_start&lt;current_date and state in ('ready')">
                            <field name="name"/>
                            <field name="date_planned_start" invisible="1"/>
                            <field name="add_consumption"/>
                            <field name="rework_qty" attrs="{'invisible':[('add_consumption','=',False)], 'readonly':[('state','not in', ['draft','ready'])]}"/>
                            <field name="workcenter_id"/>
                            <field name="cycle" string="Std No. of Cycles"/>
                            <field name="hour" widget="float_time" string="Std No. of Hours"/>
                            <field name="state"/>
                        </tree>
                    </field>
                    <group col="2" colspan="2">
                        <button name="%(osi_mrp_variances.action_wo_addition)d"
                                type="action"
                                states="confirmed,planned,progress"
                                string="Add extra Workorder"
                                class="btn-primary"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//page[1]" position="inside">
                <group col="2" colspan="2">
                    <button name="%(osi_mrp_variances.action_product_remove)d"
                            type="action"
                            states="confirmed,planned,progress"
                            string="Remove Materials"
                            class="btn-primary"/>
                </group>
            </xpath>
            <xpath expr="//page[last()]" position="inside">
                <group name="labor_variance_overhead">
                    <group string="Labor and Overhead">
                        <field name="std_labor"/>
                        <field name="std_overhead"/>
                        <field name="std_material"/>
                    </group>
                    <group string="Labor and Overhead Variance">
                        <field name="variance_labor"/>
                        <field name="variance_overhead"/>
                        <field name="variance_material"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='location_id']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='quantity_done']" position="after">
                <button name="%(osi_mrp_variances.action_update_stock_move_src_location)d"
                        type="action"
                        states="draft,waiting,confirmed,assigned"
                        string="Update Source Location"
                        icon="fa-cogs"/>
            </xpath>
        </field>
    </record>

    <record id="mrp_production_workorder_consumption_form_view" model="ir.ui.view">
        <field name="name">mrp.production.workorder.consumption.form</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit" />
        <field name="arch" type="xml">
            <field name="is_produced" position="before">
                <field name="add_consumption"/>
                <field name="rework_qty" attrs="{'invisible':[('add_consumption','=',False)], 'readonly':[('state','not in', ['draft','ready'])]}"/>
            </field>
            <xpath expr="//page[3]/group" postion="after">
                <group string="Duration">
                    <field name="cycle"/>
            		<field name="hour"/>
                </group>
                <group string="Costing">
                    <field name="costs_hour"/>
                    <field name="overhead_cost_per_cycle"/>
                    <field name="time_start"/>
                    <field name="time_stop"/>
                </group>
                <group string="Labor and Overhead">
            		<field name="std_labor"/>
            		<field name="std_overhead"/>
            	</group>
            	<group string="Labor and Overhead Variance">
            		<field name="actual_variance_labor"/>
            		<field name="actual_variance_overhead"/>
            	</group>
            </xpath>
        </field>
    </record>

    <record id="mrp_workcenter_costing_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.workcenter.costing.form.inherit</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp_account.mrp_workcenter_view_inherit" />
        <field name="arch" type="xml">
            <field name="costs_hour_account_id" position="after">
                <field name="costs_cycle"/>
                <field name="overhead_cost_per_cycle"/>
                <field name="overhead_cost_acc_id"/>
            </field>
            <xpath expr="//page[1]/group/group[last()]" position="after">
                <group string="Labor and Overhead">
                    <field name="std_labor"/>
                    <field name="std_overhead"/>
                </group>
            </xpath>
	    </field>
    </record>

    <record id="mrp_workcenter_time_cycle_view" model="ir.ui.view">
        <field name="name">mrp.workcenter.timecycle.form.inherit</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view" />
        <field name="arch" type="xml">
            <field name="capacity" position="after">
                <field name="time_cycle"/>
            </field>
	    </field>
    </record>

    <record id="mrp_routing_workcenter_cycle_tree_view" model="ir.ui.view">
        <field name="name">mrp.routing.workcenter.cycle.tree</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_routing_workcenter_tree_view" />
        <field name="arch" type="xml">
            <field name="workcenter_id" position="after">
                <field name="cycle_nbr"/>
                <field name="hour_nbr"/>
            </field>
	    </field>
    </record>

    <record id="mrp_routing_workcenter_cycle_form_view" model="ir.ui.view">
        <field name="name">mrp.routing.workcenter.cycle.form</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view" />
        <field name="arch" type="xml">
            <field name="time_cycle" position="after">
                <field name="cycle_nbr"/>
                <field name="hour_nbr"/>
            </field>
	    </field>
    </record>

    <record id="mrp_bom_product_eff_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.product.eff.form</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']" position="after">
                <field name="product_efficiency"/>
            </xpath>
	    </field>
    </record>

    <record id="mrp_production_workorder_add_extra_material_form_view" model="ir.ui.view">
        <field name="name">mrp.production.workorder.add.extra.material.form.view</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp_production_add_middle_stuff.mrp_production_addition_form_view"/>
        <field name="arch" type="xml">
            <button name="%(mrp_production_add_middle_stuff.action_addition)d" position="attributes">
                <attribute name="string">Add extra material</attribute>
            </button>
        </field>
    </record>
</odoo>
